{
    "manifest_version": 3,
    "name": "LinkedIn Easy Apply Automator",
    "version": "1.0",
    "description": "Automate LinkedIn Easy Apply applications with human-like behavior.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*",
                "https://www.linkedin.com/mynetwork/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}