{
    "manifest_version": 3,
    "name": "LinkedIn Automator",
    "version": "1.0",
    "description": "Automate LinkedIn Easy Apply applications with human-like behavior.",
    "permissions": [
        "activeTab",
        "storage",
        "management"
    ],
    "default_locale": "en",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*",
                "https://www.linkedin.com/mynetwork/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}